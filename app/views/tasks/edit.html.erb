<h1>Edit task</h1>


<%= form_for(@task, :html => {:class => 'x', 'data-bar' => 'baz'}) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>


<%= link_to "back", tasks_path %>
